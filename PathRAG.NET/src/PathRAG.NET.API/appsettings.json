{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=PathRAG;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Graph": {
    "Provider": "SqlServer",
    "ConnectionString": "Server=localhost;Database=PathRAG;Trusted_Connection=True;TrustServerCertificate=True;",
    "EmbeddingDimensions": 1536
  },
  "PathRAG": {
    "EmbeddingBatchSize": 32,
    "MaxTokensPerLine": 300,
    "MaxTokensPerParagraph": 1000,
    "OverlapTokens": 100,
    "MaxRelevantChunks": 50,
    "MaxInputTokens": 32768,
    "MaxOutputTokens": 800,
    "MessageLimit": 20,
    "TopK": 40,
    "MaxTokenForTextUnit": 4000,
    "MaxTokenForGlobalContext": 3000,
    "MaxTokenForLocalContext": 5000
  },
  "AzureOpenAI": {
    "ChatCompletion": {
      "Endpoint": "https://your-resource.openai.azure.com/",
      "Deployment": "gpt-4o",
      "ModelId": "gpt-4o",
      "ApiKey": "your-api-key"
    },
    "Embedding": {
      "Endpoint": "https://your-resource.openai.azure.com/",
      "Deployment": "text-embedding-3-large",
      "ModelId": "text-embedding-3-large",
      "ApiKey": "your-api-key",
      "Dimensions": 1536
    }
  }
}


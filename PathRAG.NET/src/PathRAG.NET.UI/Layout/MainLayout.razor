@inherits LayoutComponentBase

<AntDesign.ProLayout.BasicLayout
    Logo="@("data:image/svg+xml;base64,")"
    Title="PathRAG.NET"
    MenuData="@_menuData"
    @bind-Collapsed="@_collapsed"
    FixedHeader="true"
    FixSiderbar="true">
    <RightContentRender>
        <Space Size="@("24")">
            <SpaceItem>
                <Tooltip Title="@("GitHub")">
                    <a href="https://github.com" target="_blank" style="color: inherit;">
                        <Icon Type="github" Theme="outline" Style="font-size: 18px;" />
                    </a>
                </Tooltip>
            </SpaceItem>
            <SpaceItem>
                <Tooltip Title="@("Documentation")">
                    <Icon Type="question-circle" Theme="outline" Style="font-size: 18px; cursor: pointer;" />
                </Tooltip>
            </SpaceItem>
            <SpaceItem>
                <Avatar Style="background-color: #1890ff;">
                    <Icon Type="user" />
                </Avatar>
            </SpaceItem>
        </Space>
    </RightContentRender>
    <ChildContent>
        <div style="padding: 24px; min-height: calc(100vh - 112px); background: #f5f7fa;">
            @Body
        </div>
    </ChildContent>
    <FooterRender>
        <div class="app-footer">
            PathRAG.NET v1.0 | Knowledge Graph RAG System | Powered by Azure OpenAI & SQL Server
        </div>
    </FooterRender>
</AntDesign.ProLayout.BasicLayout>

<AntContainer />

@code {
    private bool _collapsed;

    private readonly AntDesign.ProLayout.MenuDataItem[] _menuData = new[]
    {
        new AntDesign.ProLayout.MenuDataItem
        {
            Path = "/",
            Name = "Dashboard",
            Key = "dashboard",
            Icon = "dashboard"
        },
        new AntDesign.ProLayout.MenuDataItem
        {
            Path = "/documents",
            Name = "Documents",
            Key = "documents",
            Icon = "folder-open"
        },
        new AntDesign.ProLayout.MenuDataItem
        {
            Path = "/chat",
            Name = "AI Chat",
            Key = "chat",
            Icon = "robot"
        },
        new AntDesign.ProLayout.MenuDataItem
        {
            Path = "/graph",
            Name = "Knowledge Graph",
            Key = "graph",
            Icon = "deployment-unit"
        },
        new AntDesign.ProLayout.MenuDataItem
        {
            Path = "/logs",
            Name = "Log Visualizer",
            Key = "logs",
            Icon = "monitor"
        }
    };
}

